
<div class="section6">
    <div class="container">
        <h2 class="section6-title">{{section.settings.title}}</h2>
            <div class="section5-background-image" style="background-image:url({{block.settings.image | img_url: 'master'}})">
                {% for block in section.blocks %}
            <div class="section6-col-item">    
                <div class="section6-discription">{{block.settings.description}}</div>
                    <a class="section6-btn btn" href="{{block.settings.blog_button}}" style="background-color: {{block.settings.blog_button_color}}">
                    {{block.settings.buttontext}}
                        </a>
                    {% endfor %}
                </div>
            </div>
    </div>
</div>






{% schema %}
{
  "name": "About Us",
  "class": "index-section about_us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "about us",
      "settings": [
        
        {
          "type": "image_picker",
          "id": "image",
          "label": "background image"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "discription"
        },
         {
          "type": "url",
          "id": "buttonurl",
          "label": "button url"
        },
         {
          "type": "text",
          "id": "buttontext",
          "label": "button text"
        },
        {
          "type": "color",
          "id": "about_button_color",
          "label": "about us button color"
        }
      ]      
    }
   
  ],
  "presets": [
    {
      "name": "About us",
      "category": "homepage",
      "settings": {
      },
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}